<div class="show">
<h1><%= link_to @food_truck.name, @food_truck.url %></h1><br>
<%= image_tag @food_truck.image_url %><br>
<p><%= stars(@food_truck.average_review) %></p>
<%= @food_truck.rating %>
</div>

<%= form_for [@food_truck, @review] do |f| %>
<%= render partial: "layouts/errors", locals: {record: @review} %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 1, max: 5 %>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<div class="cards">
<%= @food_truck.reviews.each do |review| %>
<%= render partial: "reviews/review", locals: {review: review} %>
   <% end %>
</div>


