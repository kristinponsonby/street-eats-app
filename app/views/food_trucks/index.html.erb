<div class="hero-image">
  <div class="hero-text">
    <h1>STREET EATS</h1>
    <p>All your favorite food trucks in Knoxville, TN</p>
  </div>
</div>

 <div class="search-bar">
<%= form_tag food_trucks_path, method: :get do %> 
  <%= text_field_tag :search, @params[:search], placeholder: "Captain Muchachos"%> 
  <div class ="button"> <%= submit_tag "Search!" %>
<% end  %>
</div>
</div>
<br>
<br>

<div class="cards">
  <% @food_trucks.each do |food_truck| %>
   <div class="card">
    <%= link_to(image_tag(food_truck.image_url), food_truck) %><br>
      <h3><%= link_to(food_truck.name, food_truck, class: "link-primary") %></h3><br>
 </div>
    <% end %>